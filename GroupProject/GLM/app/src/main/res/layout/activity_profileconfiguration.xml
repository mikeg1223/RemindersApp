<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".ProfileConfigurationActivity">

    <Button
        android:id="@+id/b_save"
        android:layout_width="216dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cb_alerts" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="98dp"
        app:layout_constraintBottom_toTopOf="@+id/lastNameProfileID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/lastNameProfileID"
        android:layout_width="97dp"
        android:layout_height="34dp"
        android:text="Last name:"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/firstNameProfileID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/firstNameProfileID"
        android:layout_width="97dp"
        android:layout_height="34dp"
        android:text="First name"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastNameProfileID" />

    <TextView
        android:id="@+id/emailProfileID"
        android:layout_width="97dp"
        android:layout_height="34dp"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstNameProfileID" />

    <TextView
        android:id="@+id/editPassProfileID"
        android:layout_width="97dp"
        android:layout_height="34dp"
        android:text="Edit Password"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailProfileID" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="58dp"
        android:layout_height="45dp"
        android:layout_marginStart="352dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="685dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iconimage" />

    <EditText
        android:id="@+id/et_firstName"
        android:layout_width="114dp"
        android:layout_height="34dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="97dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Sample Data"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/et_lastName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lastNameProfileID"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/et_lastName"
        android:layout_width="114dp"
        android:layout_height="34dp"
        android:layout_marginStart="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Sample Data"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/firstNameProfileID"
        app:layout_constraintTop_toBottomOf="@+id/et_firstName" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="114dp"
        android:layout_height="34dp"
        android:layout_marginStart="24dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text=""
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/editPassProfileID"
        app:layout_constraintTop_toBottomOf="@+id/et_email" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="114dp"
        android:layout_height="34dp"
        android:layout_marginStart="24dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="abc@123.com"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/emailProfileID"
        app:layout_constraintTop_toBottomOf="@+id/et_lastName" />

    <CheckBox
        android:id="@+id/cb_alerts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="Alerts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPassProfileID" />

    <Button
        android:id="@+id/b_logOut"
        android:layout_width="108dp"
        android:layout_height="36dp"
        android:layout_marginTop="24dp"
        android:text="Log Out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_save" />

</androidx.constraintlayout.widget.ConstraintLayout>